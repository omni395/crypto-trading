<div class="rounded bg-gray-800 p-4 shadow flex flex-col gap-2">
  <div class="flex items-center justify-between">
    <span class="font-bold text-white text-lg">
      <% if @coin.respond_to?(:symbol) && @coin.symbol.present? %>
        <%= @coin.symbol %>
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
    <span class="text-xs text-gray-400">
      <% if @coin.respond_to?(:base_asset) && @coin.base_asset.present? && @coin.respond_to?(:quote_asset) && @coin.quote_asset.present? %>
        <%= @coin.base_asset %>/<%= @coin.quote_asset %>
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
  </div>
  <div class="flex items-center justify-between text-xs text-gray-300">
    <span>
      Цена:
      <% if @coin.respond_to?(:last_price) && @coin.last_price.present? %>
        <span class="text-white"><%= @coin.last_price %></span>
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
    <span>
      Объем:
      <% if @coin.respond_to?(:volume) && !@coin.volume.nil? %>
        <%= number_with_delimiter(@coin.volume.round) %>
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
  </div>
  <div class="flex items-center justify-between text-xs">
    <span class="<%= @coin.respond_to?(:price_change_percent) && @coin.price_change_percent.to_f >= 0 ? 'text-green-400' : 'text-red-400' %>">
      <% if @coin.respond_to?(:price_change_percent) && !@coin.price_change_percent.nil? %>
        <%= @coin.price_change_percent %>%
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
    <span>
      <% if @coin.respond_to?(:trades) && !@coin.trades.nil? %>
        Сделок: <%= @coin.trades %>
      <% else %>
        <span class="text-gray-400">нет данных</span>
      <% end %>
    </span>
  </div>
</div>
