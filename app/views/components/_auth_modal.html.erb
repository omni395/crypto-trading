<div id="auth-modal" tabindex="-1" aria-hidden="true" class="fixed left-0 right-0 top-0 z-50 hidden h-[calc(100%-1rem)] max-h-full w-full overflow-y-auto overflow-x-hidden p-4 md:inset-0" data-controller="auth-modal">
  <div class="relative max-h-full w-full max-w-md mx-auto">
    <div class="relative rounded-lg bg-gray-600 shadow-lg shadow-gray-400">
      <div class="flex items-start justify-between rounded-t border-b border-gray-600 p-5">
        <h3 class="text-xl font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-user text-gray-300 text-2xl"></i>
          Вход / Регистрация
        </h3>
        <button type="button" class="ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg bg-transparent text-sm text-gray-400 hover:bg-gray-600 hover:text-white" data-modal-hide="auth-modal">
          <span class="sr-only">Закрыть</span>
          <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
          </svg>
        </button>
      </div>
      <div class="space-y-4 p-6">
        <div id="auth-tabs" class="flex justify-center mb-4 gap-2">
          <button type="button" data-auth-modal-target="loginTab" class="auth-tab px-4 py-2 rounded bg-blue-600 text-white" data-action="click->auth-modal#loginTabClicked">Вход</button>
          <button type="button" data-auth-modal-target="registerTab" class="auth-tab px-4 py-2 rounded bg-gray-500 text-white" data-action="click->auth-modal#registerTabClicked">Регистрация</button>
          <button type="button" data-auth-modal-target="resetTab" class="auth-tab px-4 py-2 rounded bg-gray-500 text-white hidden" data-action="click->auth-modal#resetTabClicked">Восстановить пароль</button>
        </div>
        <div id="auth-tab-content-login" data-auth-modal-target="loginContent">
          <%= render partial: 'devise/sessions/new', locals: { resource: User.new, resource_name: :user, devise_mapping: Devise.mappings[:user], resource_class: User, form_id: 'login_user_form_modal' } %>
        </div>
        <div id="auth-tab-content-register" class="hidden" data-auth-modal-target="registerContent">
          <%= render partial: 'devise/registrations/new', locals: { resource: User.new, resource_name: :user, devise_mapping: Devise.mappings[:user], resource_class: User, form_id: 'register_user_form_modal' } %>
        </div>
        <div id="auth-tab-content-reset" class="hidden" data-auth-modal-target="resetContent">
          <%= render partial: 'devise/passwords/new', locals: { resource: User.new, resource_name: :user, devise_mapping: Devise.mappings[:user], resource_class: User, form_id: 'reset_password_form_modal' } %>
        </div>
      </div>
    </div>
  </div>
</div>
