<h2 class="text-xl font-bold mb-4">Вход</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: (defined?(form_id) && form_id.present?) ? form_id : "login_user_form" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4 flex items-center">
    <%= f.check_box :remember_me, class: "mr-2", id: nil %>
    <%= f.label :remember_me, class: "text-gray-700" %>
  </div>
  <div class="mb-4">
    <%= f.submit "Войти", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
<div class="flex justify-end">
  <a href="#" id="open-reset-tab" class="text-blue-400 hover:underline text-sm">Забыли пароль?</a>
</div>
