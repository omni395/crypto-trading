<h2 class="text-xl font-bold mb-4">Войти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded" %>
  </div>
  <div class="mb-4 flex items-center">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me, class: "ml-2 text-gray-700" %>
  </div>
  <div class="mb-4">
    <%= f.submit "Войти", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>

<div class="my-4 flex items-center justify-center">
  <span class="text-gray-500">или</span>
</div>

