<div class="flex items-center justify-center min-h-[80vh] mt-10">
  <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-md p-8">
    <ul class="flex mb-6 border-b border-gray-600">
      <li class="px-4 pb-2 text-gray-400 cursor-pointer hover:text-white hover:border-b-2 hover:border-blue-400"><a href="<%= new_user_session_path %>">Вход</a></li>
      <li class="px-4 pb-2 border-b-2 border-blue-500 font-semibold text-white">Регистрация</li>
    </ul>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4 w-[90%] mx-auto">
        <%= f.label :email, class: "block text-gray-700 text-white pb-2 px-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
      </div>
      <div class="mb-4 w-[90%] mx-auto">
        <%= f.label :password, class: "block text-gray-700 text-white pb-2 px-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
      </div>
      <div class="mb-4 w-[90%] mx-auto">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-white pb-2 px-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
      </div>
      <div class="mb-4 w-[90%] mx-auto">
        <%= f.submit "Зарегистрироваться", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="my-4 flex items-center justify-center px-2 w-[90%] mx-auto">
      <span class="text-gray-500">или</span>
    </div>

    <%= render partial: 'devise/sessions/google_oauth2' %>

    <%= render "devise/shared/links" %>
  </div>
</div>
