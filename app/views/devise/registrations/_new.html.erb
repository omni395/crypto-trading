<h2 class="text-xl font-bold mb-4">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: (defined?(form_id) && form_id.present?) ? form_id : "register_user_form" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4">
    <%= f.submit "Зарегистрироваться", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
