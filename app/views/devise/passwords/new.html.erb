<div class="flex items-center justify-center min-h-[80vh] mt-10">
  <div class="w-full max-w-md bg-gray-800 rounded-lg shadow-md p-8">
    <ul class="flex mb-6 border-b border-gray-600">
      <li class="px-4 pb-2 border-b-2 border-blue-500 font-semibold text-white">Восстановление пароля</li>
    </ul>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: (defined?(form_id) && form_id.present?) ? form_id : "reset_password_form" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-white pb-2 px-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded", id: nil %>
    </div>
    <div class="mb-4">
      <%= f.submit "Сбросить пароль", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  </div>
</div>
