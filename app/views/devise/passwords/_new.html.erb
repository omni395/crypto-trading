<h2 class="text-xl font-bold mb-4">Восстановление пароля</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: (defined?(form_id) && form_id.present?) ? form_id : "reset_password_form" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded", id: nil %>
  </div>
  <div class="mb-4">
    <%= f.submit "Сбросить пароль", class: "w-full bg-yellow-600 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
