<div class="max-w-4xl w-full sm:w-4/5 md:w-2/3 mx-auto p-10 bg-gray-700 rounded-xl shadow-lg mt-[18vh]">
  <h1 class="text-2xl font-bold m-4 text-white flex items-center gap-2">
    <i class="fa-solid fa-shield-halved text-gray-300 text-2xl"></i>
    Новая роль
  </h1>
  <%= form_with model: @role, html: {data: {turbo: false}}, url: admin_roles_path, local: true, class: "space-y-6" do |f| %>
    <div class="mx-4">
      <%= f.label :name, 'Название роли', class: 'block mb-2 text-sm text-gray-300' %>
      <%= f.text_field :name, class: 'px-3 py-2 rounded bg-gray-800 text-white w-full text-sm focus:ring-2 focus:ring-blue-500' %>
    </div>
    <div class="flex items-center justify-between">
      <%= f.submit 'Создать', class: 'm-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-2 py-2 rounded shadow transition' %>
      <%= link_to 'Назад', admin_roles_path, class: 'm-4 text-gray-300 underline hover:text-white text-sm' %>
    </div>
  <% end %>
</div>
