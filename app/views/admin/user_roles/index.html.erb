<div class="max-w-4xl w-full sm:w-4/5 md:w-2/3 mx-auto p-10 bg-gray-700 rounded-xl shadow-lg mt-[12vh]">
  <h1 class="text-2xl font-bold mb-8 text-white flex items-center gap-2">
    <i class="fa-solid fa-user-shield text-gray-300 text-2xl"></i>
    Назначения ролей пользователям
  </h1>
  <%= link_to 'Назначить роль пользователю', new_admin_user_role_path, class: 'bg-blue-600 text-white px-2 py-1 rounded mb-5 inline-block shadow hover:bg-blue-700 transition' %>
  <div class="overflow-x-auto rounded-lg shadow border border-gray-600 bg-gray-800 mt-4">
    <table class="w-full text-sm text-gray-200">
      <thead>
        <tr class="bg-gray-700 text-gray-300 uppercase text-xs tracking-wider">
          <th class="p-3 text-left">ID</th>
          <th class="p-3 text-left">Пользователь</th>
          <th class="p-3 text-left">Роль</th>
          <th class="p-3 text-right w-20">Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @user_roles.each do |ur| %>
          <tr class="border-b border-gray-600 hover:bg-green-900 transition">
            <td class="p-3 font-mono text-gray-400"><%= ur.id %></td>
            <td class="p-3 font-semibold"><%= ur.user.email %></td>
            <td class="p-3"><span class="inline-block px-2 py-1 rounded bg-green-900 text-green-200 font-semibold text-xs"><%= ur.role.name %></span></td>
            <td class="p-3 text-right w-20">
              <%= link_to admin_user_role_path(ur), method: :delete, data: { confirm: 'Удалить роль у пользователя?' }, class: 'text-red-400 hover:text-red-600', title: 'Удалить' do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
